create table department  (dep_id int primary key,dep_name varchar(100) not null  ) ENGINE=InnoDB;
create table semester (sem_id int primary key,dep_id int ,FOREIGN KEY(dep_id) REFERENCES department(dep_id) on delete cascade on update cascade)ENGINE=InnoDB; 
create table roles (roles varchar(100) primary key) ENGINE=InnoDB;
insert into roles values ("Administrator");
insert into roles values ("Staff");
insert into roles values ("Teacher");
insert into roles values ("Student");
create table status (status varchar(100) primary key) ENGINE=InnoDB;
insert into status values ("Approved");
insert into status values ("Not Approved");
create table login (lid int primary key auto_increment,username varchar(100) unique not null,password varchar(100) not null,roles varchar(100) , status varchar(100),FOREIGN KEY(roles) REFERENCES roles(roles) on delete cascade on update cascade,FOREIGN KEY(status) REFERENCES status(status) on delete cascade on update cascade) ENGINE=InnoDB;
insert into login(username,password,roles,status) values ("aswin","aswin","Administrator","Approved");
